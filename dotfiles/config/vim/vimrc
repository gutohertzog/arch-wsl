" pop up menu
set pumheight=10

" divisão da tela
set splitbelow
set splitright

set wildmenu
set wildmode=list:longest

set history=1000

set encoding=utf-8
set fileformat=unix

" interface {{{
set number
set relativenumber

set laststatus=2
set signcolumn=yes

set cursorline
