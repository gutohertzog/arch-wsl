set scrolloff=1
set sidescrolloff=0

set wrap

set showmatch

set colorcolumn=80,100

" barra inferior
set showcmd

set showmode

set showbreak=↪\
set listchars=tab:<->,eol:↲,nbsp:║,space:␣,trail:•,extends:⟩,precedes:⟨
set nolist
" }}}

